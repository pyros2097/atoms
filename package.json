{
  "name": "atoms-state",
  "author": "pyros.sh",
  "description": "A simple statemanagement library for react",
  "version": "0.5.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "react",
    "react-native",
    "atoms",
    "atoms-state",
    "atoms-ui",
    "atoms-utils",
    "state",
    "pyros.sh"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsc src/*.* -d --target es6 --module commonjs --moduleResolution node --outDir dist",
    "test": "tsdx test",
    "lint": "tsdx lint --fix",
    "prepare": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 160,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "husky": "^6.0.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.1.1",
    "**/@typescript-eslint/parser": "^4.1.1"
  }
}